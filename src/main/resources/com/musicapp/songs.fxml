<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<VBox fx:id="content" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.SongDetailsController" spacing="20">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Songs" style="-fx-font-size: 32px; -fx-font-weight: bold;">
        <VBox.margin>
            <Insets bottom="30"/>
        </VBox.margin>
    </Label>

    <TextField fx:id="searchField" promptText="Search by song title, artist, genre, instrument, or difficulty" style="-fx-font-size: 14px; -fx-padding: 12;">
        <VBox.margin>
            <Insets bottom="30"/>
        </VBox.margin>
    </TextField>
    
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;" minHeight="400">
        <padding>
            <Insets right="10"/>
        </padding>
        <VBox fx:id="songsContainer" spacing="15"/>
    </ScrollPane>

    <HBox spacing="20" alignment="CENTER">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>
        <Button fx:id="createSongButton" text="Create Song" style="-fx-padding: 12 24; -fx-font-size: 14px;"/>
        <Button fx:id="editSongButton" text="Edit Song" style="-fx-padding: 12 24; -fx-font-size: 14px;"/>
    </HBox>
</VBox> 